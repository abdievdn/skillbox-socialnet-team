.pagination-block {
  overflow: hidden;
  transform: translateY(48px) scale(0.9);
  transition: transform 0.8s, opacity 0.8s;
  opacity: 0;
}

.pagination-block_active {
  transform: translateY(0px) scale(1);
  opacity: 1;
}

.list__loading {
  margin: 0 auto;
  width: 150px;
  height: 150px;
}

.list__loading > svg {
  width: 100%;
  height: 100%;
}
